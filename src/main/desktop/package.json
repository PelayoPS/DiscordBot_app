{
  "name": "discord-bot-desktop-app",
  "version": "1.0.0",
  "description": "Discord Bot Manager - Aplicaci√≥n de escritorio para gestionar un bot de Discord",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "PelayoPS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^23.1.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.discordbot.manager",
    "productName": "Discord Bot Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/discord.ico",
      "forceCodeSigning": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Discord Bot Manager"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PelayoPS/DiscordBot_app.git"
  },
  "bugs": {
    "url": "https://github.com/PelayoPS/DiscordBot_app/issues"
  },
  "homepage": "https://github.com/PelayoPS/DiscordBot_app#readme",
  "dependencies": {
    "discord-bot-desktop-app": "file:"
  }
}
