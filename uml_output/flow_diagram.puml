@startuml flujo
!theme plain
start

:Iniciar Bot;
:Cargar Token;

if (Token Válido?) then (sí)
  :Inicializar JDA;
  :Cargar Módulos;
  :Registrar Comandos;
  
  fork
    :Escuchar Eventos;
    repeat
      :Procesar Evento;
      if (Es Comando?) then (sí)
        if (Módulo Habilitado?) then (sí)
          :Ejecutar Comando;
        else (no)
          :Mostrar Error;
        endif
      endif
    repeat while (Bot Activo?) is (sí)
  fork again
    :Iniciar GUI;
    repeat
      :Actualizar Interface;
    repeat while (Bot Activo?) is (sí)
  end fork
  
  :Apagar Bot;
else (no)
  :Mostrar Error;
endif

stop
@enduml
